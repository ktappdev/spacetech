---
import SocialImage from '../components/SocialImage.astro';
---

<html>
    <head>
        <style is:global>
            :root {
                --accent: #00ff88;
                --accent-secondary: #00ffee;
                --background: #030014;
                --text: #fff;
            }
            
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Space Grotesk', system-ui, sans-serif;
                background: var(--background);
                color: var(--text);
            }
        </style>
    </head>
    <body>
        <SocialImage />
    </body>
</html> 