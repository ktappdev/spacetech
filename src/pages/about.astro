<style>
    .about-container {
        padding: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .about-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .about-header h1 {
        font-size: 4rem;
        background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        display: inline-block;
    }

    .asterisk {
        position: absolute;
        top: -0.5rem;
        right: -1rem;
        font-size: 2rem;
        color: var(--accent);
    }

    .subtitle {
        color: var(--accent);
        font-size: 1.1rem;
        font-style: italic;
    }

    .about-section {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 3rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease;
    }

    .about-section:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    h2 {
        color: var(--accent);
        margin-bottom: 1.5rem;
        font-size: 2rem;
    }

    .mission-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
        text-align: center;
    }

    .stat {
        padding: 1.5rem;
        background: rgba(0, 255, 136, 0.1);
        border-radius: 16px;
        transition: transform 0.3s ease;
    }

    .stat:hover {
        transform: scale(1.05);
    }

    .number {
        font-size: 3rem;
        font-weight: 700;
        color: var(--accent);
        display: block;
    }

    .label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .footnote {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        font-style: italic;
        margin-top: 1rem;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .team-member {
        text-align: center;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        transition: transform 0.3s ease;
    }

    .team-member:hover {
        transform: translateY(-10px);
    }

    .avatar {
        font-size: 4rem;
        margin-bottom: 1rem;
        filter: drop-shadow(0 0 10px rgba(0, 255, 136, 0.3));
    }

    .team-member h3 {
        color: var(--accent);
        margin-bottom: 0.5rem;
    }

    .bio {
        font-style: italic;
        color: rgba(255, 255, 255, 0.8);
        margin-top: 1rem;
    }

    .testimonials {
        text-align: center;
    }

    .testimonial {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        position: relative;
    }

    .testimonial:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .testimonial p {
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    cite {
        color: var(--accent);
        font-style: italic;
    }

    .legal {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .small-print {
        font-size: 0.7rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 1rem;
        font-style: italic;
    }

    @media (max-width: 768px) {
        .about-container {
            padding: 1rem;
        }

        .about-header h1 {
            font-size: 3rem;
        }

        .about-section {
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        h2 {
            font-size: 1.75rem;
        }

        .mission-stats {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .team-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .team-member {
            padding: 1.5rem;
        }

        .avatar {
            font-size: 3rem;
        }
    }

    @media (max-width: 480px) {
        .about-header h1 {
            font-size: 2.5rem;
        }

        .about-section {
            padding: 1.25rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .number {
            font-size: 2.5rem;
        }
    }
</style> 