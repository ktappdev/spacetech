---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import Hero from '../components/Hero.astro';
import { products } from '../data/products';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Hero />

	<section id="products" class="categories">
		<div class="section-header">
			<h2>Featured Products</h2>
			<p class="section-description">Discover our cutting-edge space technology available for subscription</p>
		</div>
		<div class="products-grid">
			{products.map(product => (
				<ProductCard product={product} />
			))}
		</div>
	</section>

	<section class="why-subscribe">
		<div class="section-header">
			<h2>Why Subscribe?</h2>
			<p class="section-description">Experience the benefits of our subscription-based space technology</p>
		</div>
		<div class="benefits">
			<div class="benefit">
				<div class="benefit-icon">üöÄ</div>
				<h3>Latest Tech</h3>
				<p>Always get access to the newest space technology upgrades and improvements</p>
			</div>
			<div class="benefit">
				<div class="benefit-icon">üõ°Ô∏è</div>
				<h3>Full Support</h3>
				<p>24/7 intergalactic customer support for all subscribers across the universe</p>
			</div>
			<div class="benefit">
				<div class="benefit-icon">üí´</div>
				<h3>Flexibility</h3>
				<p>Cancel anytime - no long-term contracts required. Freedom to explore the cosmos</p>
			</div>
		</div>
	</section>
</Layout>

<style>
	.section-header {
		text-align: center;
		margin-bottom: 4rem;
		padding: 0 1rem;
	}

	.section-header h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.section-description {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 600px;
		margin: 0 auto;
	}

	.categories {
		padding: 8rem 2rem;
	}

	.products-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
		max-width: 1400px;
		margin: 0 auto;
		padding: 1rem;
	}

	.why-subscribe {
		padding: 8rem 2rem;
		background: rgba(255, 255, 255, 0.02);
		position: relative;
	}

	.benefits {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.benefit {
		text-align: center;
		padding: 3rem 2rem;
		background: rgba(255, 255, 255, 0.03);
		border-radius: 24px;
		transition: transform 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.benefit:hover {
		transform: translateY(-10px);
		background: rgba(255, 255, 255, 0.05);
	}

	.benefit-icon {
		font-size: 3rem;
		margin-bottom: 1.5rem;
	}

	.benefit h3 {
		color: var(--accent);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.benefit p {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.categories, .why-subscribe {
			padding: 4rem 1rem;
		}

		.section-header {
			margin-bottom: 2.5rem;
		}

		.section-header h2 {
			font-size: 2rem;
		}

		.section-description {
			font-size: 1rem;
		}

		.products-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			padding: 0.5rem;
		}

		.benefit {
			padding: 2rem 1.5rem;
		}

		.benefit-icon {
			font-size: 2.5rem;
			margin-bottom: 1rem;
		}

		.benefit h3 {
			font-size: 1.3rem;
		}
	}

	@media (max-width: 480px) {
		.categories, .why-subscribe {
			padding: 3rem 1rem;
		}

		.section-header {
			margin-bottom: 2rem;
		}

		.section-header h2 {
			font-size: 1.75rem;
		}

		.products-grid {
			gap: 1rem;
			padding: 0.25rem;
		}

		.benefit {
			padding: 1.5rem 1rem;
		}

		.benefit-icon {
			font-size: 2rem;
		}

		.benefit h3 {
			font-size: 1.2rem;
		}
	}
</style>
