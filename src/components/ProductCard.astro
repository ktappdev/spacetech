---
import type { Product } from '../types/products';

interface Props {
    product: Product;
}

const { product } = Astro.props;
---

<div class="product-card">
    <div class="card-content">
        <div class="image-container">
            <div class="category-badge">{product.category}</div>
            <img src={product.imageUrl} alt={product.name} />
            <div class="image-overlay"></div>
        </div>
        <div class="content">
            <h2>{product.name}</h2>
            <p class="description">{product.description}</p>
            
            <div class="pricing">
                <div class="price-option monthly">
                    <div class="price-header">
                        <h3>Monthly</h3>
                        <span class="price-badge">Flexible</span>
                    </div>
                    <p class="price">${product.monthlyPrice}<span>/mo</span></p>
                </div>
                <div class="price-option yearly">
                    <div class="price-header">
                        <h3>Yearly</h3>
                        <span class="price-badge">Best Value</span>
                    </div>
                    <p class="price">${product.yearlyPrice}<span>/yr</span></p>
                    <p class="savings">Save {Math.round((1 - (product.yearlyPrice / (product.monthlyPrice * 12))) * 100)}%</p>
                </div>
            </div>
            
            <div class="features">
                <h3>Features:</h3>
                <ul>
                    {product.features.map(feature => (
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="feature-icon">
                                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                            </svg>
                            {feature}
                        </li>
                    ))}
                </ul>
            </div>
            
            <button class="subscribe-btn">
                Subscribe Now
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="btn-icon">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
    </div>
</div>

<style>
    .product-card {
        position: relative;
        padding: 1px;
        background: linear-gradient(45deg, rgba(0, 255, 136, 0.2), rgba(0, 255, 238, 0.2));
        border-radius: 24px;
        transition: all 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-10px);
        background: linear-gradient(45deg, rgba(0, 255, 136, 0.4), rgba(0, 255, 238, 0.4));
    }

    .card-content {
        background: rgba(3, 0, 20, 0.9);
        border-radius: 23px;
        overflow: hidden;
    }

    .image-container {
        position: relative;
        width: 100%;
        height: 240px;
        overflow: hidden;
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.7);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        text-transform: capitalize;
        z-index: 2;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(to top, rgba(3, 0, 20, 1), transparent);
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .image-container img {
        transform: scale(1.1);
    }

    .content {
        padding: 2rem;
    }

    h2 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .description {
        font-size: 1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
    }

    .pricing {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .price-option {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        padding: 1.5rem;
        transition: transform 0.3s ease;
    }

    .price-option:hover {
        transform: translateY(-5px);
    }

    .price-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .price-badge {
        font-size: 0.7rem;
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        background: rgba(0, 255, 136, 0.1);
        color: var(--accent);
    }

    .yearly .price-badge {
        background: rgba(0, 255, 238, 0.1);
        color: var(--accent-secondary);
    }

    .price {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 0.5rem;
    }

    .price span {
        font-size: 1rem;
        opacity: 0.7;
    }

    .yearly .price {
        color: var(--accent-secondary);
    }

    .savings {
        font-size: 0.9rem;
        color: var(--accent-secondary);
    }

    .features {
        margin: 2rem 0;
    }

    .features h3 {
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .features ul {
        list-style: none;
        padding-left: 0;
    }

    .features li {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 1rem 0;
        color: rgba(255, 255, 255, 0.9);
    }

    .feature-icon {
        width: 1.2rem;
        height: 1.2rem;
        color: var(--accent);
    }

    .subscribe-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
        border: none;
        border-radius: 12px;
        color: rgba(0, 0, 0, 0.9);
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-icon {
        width: 1.2rem;
        height: 1.2rem;
        transition: transform 0.3s ease;
    }

    .subscribe-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 255, 136, 0.2);
    }

    .subscribe-btn:hover .btn-icon {
        transform: translateX(4px);
    }

    @media (max-width: 768px) {
        .pricing {
            grid-template-columns: 1fr;
        }
    }
</style> 