---
import type { Product } from '../types/products';

interface Props {
    product: Product;
}

const { product } = Astro.props;
---

<div class="product-card">
    <div class="card-content">
        <div class="image-container">
            <div class="category-badge">{product.category}</div>
            <img src={product.imageUrl} alt={product.name} />
            <div class="image-overlay"></div>
        </div>
        <div class="content">
            <h2 class="product-title" title={product.name}>{product.name}</h2>
            <p class="description" title={product.description}>{product.description}</p>
            
            <div class="pricing">
                <div class="price-option">
                    <div class="price-header">
                        <span class="price-badge">Monthly Subscription</span>
                    </div>
                    <p class="price">${product.monthlyPrice}<span>/month</span></p>
                </div>
            </div>
            
            <div class="features">
                <h3>Features:</h3>
                <ul>
                    {product.features.map(feature => (
                        <li title={feature}>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="feature-icon">
                                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                            </svg>
                            <span class="feature-text">{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>
            
            <button class="subscribe-btn">
                Subscribe Now
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="btn-icon">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
    </div>
</div>

<style>
    .product-card {
        position: relative;
        padding: 1px;
        background: linear-gradient(45deg, rgba(0, 255, 136, 0.2), rgba(0, 255, 238, 0.2));
        border-radius: 24px;
        transition: all 0.3s ease;
        height: 100%;
        margin: 0 auto;
        max-width: 450px;
    }

    .product-card:hover {
        transform: translateY(-10px);
        background: linear-gradient(45deg, rgba(0, 255, 136, 0.4), rgba(0, 255, 238, 0.4));
    }

    .card-content {
        background: rgba(3, 0, 20, 0.9);
        border-radius: 23px;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .image-container {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
        flex-shrink: 0;
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.7);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        text-transform: capitalize;
        z-index: 2;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(to top, rgba(3, 0, 20, 1), transparent);
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .image-container img {
        transform: scale(1.1);
    }

    .content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        flex-grow: 1;
    }

    .product-title {
        font-size: 1.5rem;
        line-height: 1.2;
        background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description {
        font-size: 0.95rem;
        line-height: 1.5;
        color: rgba(255, 255, 255, 0.8);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.85rem;
    }

    .pricing {
        display: flex;
        justify-content: center;
        padding: 0.5rem;
    }

    .price-option {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 1.25rem 2rem;
        transition: transform 0.3s ease;
        text-align: center;
        width: 100%;
        max-width: 300px;
    }

    .price-option:hover {
        transform: translateY(-3px);
        background: rgba(255, 255, 255, 0.05);
    }

    .price-header {
        margin-bottom: 0.75rem;
    }

    .price-badge {
        font-size: 0.9rem;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        background: rgba(0, 255, 136, 0.1);
        color: var(--accent);
        display: inline-block;
    }

    .price {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent);
        margin: 0;
        white-space: nowrap;
    }

    .price span {
        font-size: 1rem;
        opacity: 0.7;
    }

    .features {
        flex-grow: 1;
    }

    .features h3 {
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
    }

    .features ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
    }

    .features li {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        padding: 0.4rem 0;
        color: rgba(255, 255, 255, 0.9);
    }

    .feature-icon {
        width: 1rem;
        height: 1rem;
        color: var(--accent);
        flex-shrink: 0;
        margin-top: 0.2rem;
    }

    .feature-text {
        font-size: 0.9rem;
        line-height: 1.4;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .subscribe-btn {
        width: 100%;
        padding: 0.9rem;
        background: linear-gradient(45deg, var(--accent), var(--accent-secondary));
        border: none;
        border-radius: 12px;
        color: rgba(0, 0, 0, 0.9);
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: auto;
    }

    .subscribe-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 255, 136, 0.2);
    }

    .btn-icon {
        width: 1rem;
        height: 1rem;
        transition: transform 0.3s ease;
    }

    .subscribe-btn:hover .btn-icon {
        transform: translateX(4px);
    }

    @media (max-width: 768px) {
        .image-container {
            height: 200px;
        }

        .content {
            padding: 1.25rem;
            gap: 1rem;
        }

        .product-title {
            font-size: 1.3rem;
        }

        .description {
            font-size: 0.9rem;
            height: auto;
            -webkit-line-clamp: 3;
        }

        .price {
            font-size: 1.75rem;
        }

        .price span {
            font-size: 0.9rem;
        }

        .price-option {
            padding: 1rem;
            max-width: none;
        }

        .price-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.8rem;
        }

        .features li {
            padding: 0.3rem 0;
        }

        .feature-text {
            font-size: 0.85rem;
        }

        .subscribe-btn {
            padding: 0.8rem;
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        .image-container {
            height: 180px;
        }

        .content {
            padding: 1rem;
            gap: 0.875rem;
        }

        .product-title {
            font-size: 1.2rem;
        }

        .description {
            font-size: 0.85rem;
            -webkit-line-clamp: 3;
        }

        .price {
            font-size: 1.5rem;
        }

        .price span {
            font-size: 0.8rem;
        }

        .price-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.7rem;
        }

        .features h3 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .feature-text {
            font-size: 0.8rem;
        }

        .subscribe-btn {
            padding: 0.75rem;
            font-size: 0.9rem;
        }
    }
</style> 